<%- model_class = Sala -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:curso_id) %></th>
      <th><%= model_class.human_attribute_name(:estudante_id) %></th>
      <th>Data matr√≠cula</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @salas.each do |sala| %>
      <tr>
        <td><%= sala.curso.nome %></td>
        <td><%= sala.estudante.nome %></td>
        <td><%=l sala.created_at %></td>
        <td>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sala_path(sala),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sala_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.todos', :default => t("helpers.links.todos")),
            salas_path,
            :class => 'btn btn-warning' if @filtering %>