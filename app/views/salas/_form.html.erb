<%= simple_form_for @sala, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :curso_id, collection: @cursos, label_method: :nome, class: 'cursos' %>
  <%= error_span(@sala[:curso_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                salas_path, :class => 'btn btn-default' %>
<% end %>